# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{j,t}s]
indent_size = 2

[*.{m,c}{j,t}s]
indent_size = 2

[*.{test,spec}.{m,c}{j,t}s]
indent_size = 2

[*.{test,spec}.{j,t}s]
indent_size = 2
