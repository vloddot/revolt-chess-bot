{
    "compilerOptions": {
        "target": "ES2015",
        "lib": ["ES2015"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "$lib/*": ["src/lib/*"],
            "$commands/*": ["src/commands/*"]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
